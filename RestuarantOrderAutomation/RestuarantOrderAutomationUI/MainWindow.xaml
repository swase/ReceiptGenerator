<Window x:Class="RestuarantOrderAutomationUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestuarantOrderAutomationUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="650">
    <Grid Background="#383534">
        <DockPanel Opacity="0.99">
            <Frame x:Name="_mainFrame" />
            <Grid Height="746" Width="514" Opacity="1" >
                <Grid.Background>
                    <ImageBrush ImageSource="/Untitled design.jpg" Stretch="UniformToFill"/>
                </Grid.Background>
                <Button x:Name="NewOrder" 
                        Click="start_new_order_click"
                        Background="#B7B5AB" FontSize="48" 
                        FontWeight="Bold" BorderBrush="#784925" FontStyle="Normal" Foreground="#C48D32" Margin="117,498,117,120"
                        >New Order
                </Button>
            </Grid>
        </DockPanel>
    </Grid>


</Window>
